#!/bin/bash

set -eu

PYLINT_DISABLE=import-error,locally-disabled,no-member,maybe-no-member,no-init,star-args,super-on-old-class

#git stash -q --keep-index

git diff --cached --name-only | while read filename; do
	if [ ! -e "${filename}" ]; then
		continue
	fi

	ext=${filename##*\.}
	case "$ext" in
		py) /usr/local/bin/pylint --rcfile=.pylintrc -rno --disable=$PYLINT_DISABLE ${filename} | sort --key=2,5 -n
		;;
	esac
done

#git stash pop -q

