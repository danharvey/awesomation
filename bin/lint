#!/bin/bash

set -eu

#git stash -q --keep-index

git diff --cached --name-only | while read filename; do
	ext=${filename##*\.}
	case "$ext" in
		py) /usr/local/bin/pylint --rcfile=.pylintrc -rno --disable=import-error,locally-disabled,no-member,maybe-no-member ${filename} | sort --key=2,5 -n
		;;
	esac
done

#git stash pop -q

